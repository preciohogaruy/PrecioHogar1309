generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  products    Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  productId   String   @unique
  title       String
  description String
  price       Float
  quantity    Int
  image       String
  rating      Float
  badge       String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
}
